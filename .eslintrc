parser: "babel-eslint"

extends: ["eslint:recommended", "plugin:react/recommended"]

plugins: ["react"]

settings:
  react:
    version: "0.14"

parserOptions:
  ecmaVersion: 6
  ecmaFeatures:
    jsx: true

env:
  browser: true
  jquery: true
  node: true
  es6: true
  jest: true

rules:
  quotes: ["error", "single", {"allowTemplateLiterals":true}]
  no-console: ["error", {allow: ["warn", "error"]}]
  prefer-const: "error"
  no-var: "error"
  strict: ["error", "never"]
  no-cond-assign: 0
  no-underscore-dangle: 0
  consistent-return: 0
  require-yield: 0
  react/no-is-mounted: 0
  react/no-direct-mutation-state: 0
  react/no-find-dom-node: 0
